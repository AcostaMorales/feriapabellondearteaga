# Configuración del servidor
PORT=4000

# Base de datos MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=AppName

# URLs del frontend (para CORS)
FRONTEND_URL=http://localhost:4173
CLIENT_URL=http://localhost:4000

# Configuración VAPID para notificaciones push
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:your_email@example.com

# Credenciales de administrador
ADMIN_USER=admin
ADMIN_PASS=your_secure_password_here